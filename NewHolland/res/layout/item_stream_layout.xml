
      <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="5dp"
          android:paddingLeft="3dp"
          android:paddingRight="3dp"
          android:paddingTop="3dp" >

          <ImageView
              android:id="@+id/image"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:adjustViewBounds="true"
              android:scaleType="centerCrop"
              android:src="@drawable/nh_1" />

          <TextView
              android:id="@+id/name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:background="@color/transparent"
              android:ellipsize="marquee"
              android:maxLines="1"
              android:padding="4dp"
              android:text="Aqui describimos el elemento"
              android:textAppearance="@style/textCategoryTitleBlack"
              android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/infoPanel"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/image"
                    android:background="@color/panel_info_stream"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="TextView"
                        android:textAppearance="@style/infoCategoryTitle" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="TextView"
                        android:textAppearance="@style/infoCategoryTitle" />

                </LinearLayout>

        </RelativeLayout>